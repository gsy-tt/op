# 基础配置
CONFIG_TARGET_qca-ipq807x=y
CONFIG_TARGET_qca-ipq807x_generic=y
CONFIG_TARGET_DEVICE_qca-ipq807x_generic_DEVICE_ipq5018=y  # 使用IPQ5018作为基础模板

# 内核配置
CONFIG_KERNEL_CONFIG_ALL=y
CONFIG_KERNEL_CONFIG_ALL_NONSHARED=y

# 网络配置
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-app-firewall=y
CONFIG_PACKAGE_luci-app-opkg=y
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y  # 中文语言包

# 驱动支持
CONFIG_PACKAGE_kmod-ath11k=y  # Wi-Fi 7驱动
CONFIG_PACKAGE_kmod-usb3=y  # USB 3.0支持
CONFIG_PACKAGE_kmod-usb-storage=y  # USB存储支持

# 其他功能
CONFIG_PACKAGE_dockerd=y  # Docker支持
CONFIG_PACKAGE_luci-app-dockerman=y  # Docker管理界面
CONFIG_PACKAGE_luci-app-samba4=y  # SMB文件共享
CONFIG_PACKAGE_luci-app-wireguard=y  # WireGuard VPN
