# 基础配置
CONFIG_TARGET_qca-ipq807x=y
CONFIG_TARGET_qca-ipq807x_generic=y
CONFIG_TARGET_DEVICE_qca-ipq807x_generic_DEVICE_ipq5018=y  # 使用IPQ5018作为基础模板

# 内核配置
CONFIG_KERNEL_CONFIG_ALL=y
CONFIG_KERNEL_CONFIG_ALL_NONSHARED=y

# 网络配置
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-app-firewall=y
CONFIG_PACKAGE_luci-app-opkg=y
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y  # 中文语言包

# 驱动支持
CONFIG_PACKAGE_kmod-ath11k=y  # Wi-Fi 7驱动
CONFIG_PACKAGE_kmod-usb3=y  # USB 3.0支持
CONFIG_PACKAGE_kmod-usb-storage=y  # USB存储支持

# 其他功能
CONFIG_PACKAGE_dockerd=y  # Docker支持
CONFIG_PACKAGE_luci-app-dockerman=y  # Docker管理界面
CONFIG_PACKAGE_luci-app-samba4=y  # SMB文件共享
CONFIG_PACKAGE_luci-app-wireguard=y  # WireGuard VPN
# 网络优化
CONFIG_PACKAGE_luci-app-sfe=y           # 软件流引擎(SFE)加速
CONFIG_PACKAGE_luci-app-flowoffload=y   # 硬件NAT加速
CONFIG_PACKAGE_kmod-sched-cake=y        # CAKE队列管理
CONFIG_PACKAGE_luci-app-ipsec-vpnd=y    # IPsec VPN服务端
CONFIG_PACKAGE_luci-app-shadowsocksr-libev=y  # SSR科学上网
CONFIG_PACKAGE_luci-app-passwall=y      # Passwall代理工具
# 文件服务
CONFIG_PACKAGE_luci-app-minidlna=y      # DLNA媒体服务器
CONFIG_PACKAGE_luci-app-vsftpd=y        # FTP服务器
CONFIG_PACKAGE_luci-app-aria2=y         # Aria2下载管理器
CONFIG_PACKAGE_luci-app-filebrowser=y   # 文件浏览器
CONFIG_PACKAGE_luci-app-zerotier=y      # 虚拟局域网工具

# 系统工具
CONFIG_PACKAGE_luci-app-adguardhome=y   # AdGuardHome广告过滤
CONFIG_PACKAGE_luci-app-ddns=y          # DDNS动态域名
CONFIG_PACKAGE_luci-app-nlbwmon=y       # 网络带宽监控
CONFIG_PACKAGE_luci-app-ttyd=y          # 网页终端访问
CONFIG_PACKAGE_luci-app-cpulimit=y      # 防止CPU被恶意程序占满
CONFIG_PACKAGE_luci-app-netdata=y       # 实时系统监控

CONFIG_PACKAGE_luci-app-mosquitto=y     # MQTT消息代理
CONFIG_PACKAGE_luci-app-homeassistant=y # Home Assistant轻量版
CONFIG_PACKAGE_luci-app-gpsd=y          # GPS服务

# 安全工具
CONFIG_PACKAGE_luci-app-fail2ban=y      # 防暴力破解
CONFIG_PACKAGE_luci-app-https-dns-proxy=y # HTTPS DNS加密
CONFIG_PACKAGE_luci-app-openvpn-server=y # OpenVPN服务端
CONFIG_PACKAGE_luci-app-softethervpn=y   # SoftEther VPN多协议支持
CONFIG_PACKAGE_luci-app-tcpdump=y       # 网络数据包捕获工具

# 性能优化
CONFIG_TARGET_OPTIMIZATION="-O3 -march=armv8-a+crc -mtune=cortex-a53"  # IPQ5322芯片优化
CONFIG_PACKAGE_luci-app-cpufreq=y       # CPU频率调节
CONFIG_PACKAGE_luci-app-turboacc=y      # Turbo ACC网络加速
CONFIG_PACKAGE_luci-app-wrtbwmon=y      # 详细带宽使用统计

# 主题美化
CONFIG_PACKAGE_luci-theme-argon=y       # Argon现代化主题
CONFIG_PACKAGE_luci-theme-edge=y        # Edge简洁主题
CONFIG_PACKAGE_luci-app-argon-config=y  # Argon主题配置工具
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y   # 中文语言包
